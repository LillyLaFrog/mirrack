<ResourceDictionary xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Mirrack.Controls">

  <!--
    Additional resources 
    Using Control Themes:
         https://docs.avaloniaui.net/docs/basics/user-interface/styling/control-themes
    Using Theme Variants:
         https://docs.avaloniaui.net/docs/guides/styles-and-resources/how-to-use-theme-variants
  -->
  
  <Design.PreviewWith>
    <StackPanel Width="400" Spacing="10">      
        <StackPanel Background="Black">
          <controls:LOption PrimaryOption="Left Option" SecondaryOption="Left Option (Hold)"/>
        </StackPanel>
    </StackPanel>
  </Design.PreviewWith>
 
  <ControlTheme x:Key="{x:Type controls:LOption}" TargetType="controls:LOption">
    <Setter Property="Template">
      <ControlTemplate>
		  <controls:LCorner>
			  <StackPanel>
				  <TextBlock TextAlignment="Left" TextWrapping="Wrap" Foreground="White" Margin="20" FontSize="60" Text="{TemplateBinding PrimaryOption}"/>
				  <TextBlock TextAlignment="Left" TextWrapping="Wrap" Foreground="White" Margin="20" FontSize="30" Text="{TemplateBinding SecondaryOption}"/>
			  </StackPanel>
		  </controls:LCorner>
      </ControlTemplate>
    </Setter>
  </ControlTheme>
</ResourceDictionary>
