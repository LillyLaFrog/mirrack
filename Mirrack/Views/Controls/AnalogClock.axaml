<ResourceDictionary xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Mirrack.Controls">

  <!--
    Additional resources 
    Using Control Themes:
         https://docs.avaloniaui.net/docs/basics/user-interface/styling/control-themes
    Using Theme Variants:
         https://docs.avaloniaui.net/docs/guides/styles-and-resources/how-to-use-theme-variants
  -->
  
  <Design.PreviewWith>
    <StackPanel Width="200" Height="200" Spacing="10">      
        <StackPanel Background="{DynamicResource SystemRegionBrush}">
          <controls:AnalogClock/>
        </StackPanel>
    </StackPanel>
  </Design.PreviewWith>
 
  <ControlTheme x:Key="{x:Type controls:AnalogClock}" TargetType="controls:AnalogClock">
    <Setter Property="Template">
      <ControlTemplate>
		  <Grid Width="200" Height="200">
			  <Ellipse Stroke="Black" StrokeThickness="5"/>
			    <Border x:Name="PART_HourHand">
					<Border.RenderTransform>
						<RotateTransform />
					</Border.RenderTransform>
				    <Rectangle VerticalAlignment="Top" Margin="55" Fill="Black" Width="5" Height="55"/>
			    </Border>
			  <Border x:Name="PART_MinuteHand">
				  <Border.RenderTransform>
					  <RotateTransform/>
				  </Border.RenderTransform>
				  <Rectangle VerticalAlignment="Top" Margin="30" Fill="Black" Width="5" Height="80"/>
			  </Border>
		  </Grid>

      </ControlTemplate>
    </Setter>
  </ControlTheme>
</ResourceDictionary>
